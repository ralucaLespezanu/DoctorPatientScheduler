<html>
<head>
    <title>Doctors</title>
    <style>
        table, tr, td {
            border: 1px solid #83A697;
            padding: 10px;
            width: 75%;
            text-align: center;
            color: #7F7F7F;
        }

        table {
            position: fixed;
            left: 200px;
            top: 75px;
        }

        tr:nth-child(even) {
            background-color: mintcream;
        }

        th {
            border: 1px solid #83A697;
            padding: 10px;
            background-color: moccasin;
            color: #7F7F7F;
            height: 50px;
            font-size: 20px;
        }

        h1 {
            position: fixed;
            left: 200px;
            color: #7F7F7F;
        }
        .add {
            pozition: fixed;
            background-color: cornsilk;
            border: none;
            color:#7F7F7F;
            padding: 10px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-left: 865px;

        }
    </style>
</head>
<body>
<h1> Doctors<a href="doctorsForm" class="add">Add new doctor</a>
</h1>
<table>
    <tr>
        <td>ID</td>
        <td>FIRST NAME</td>
        <td>LAST NAME</td>
        <td>PHONE NUMBER</td>
        <td>EMAIL</td>
        <td>SPECIALIZATION ID</td>
    </tr>
    #foreach($doctor in $doctors)
        <tr>
            <td>$doctor.id</td>
            <td>$doctor.first_name</td>
            <td>$doctor.last_name</td>
            <td>$doctor.phone_number</td>
            <td>$doctor.email</td>
            <td><a href="/doctors/$doctor.specializations_id"> $doctor.specializations_id</a></td>
        </tr>
    #end
</table>
</body>
</html>