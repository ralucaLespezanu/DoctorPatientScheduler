<html>
<head>
    <title>Users</title>
    <style>
        table, tr, td {
            border: 1px solid #83A697;
            padding: 10px;
            width: 75%;
            text-align: center;
            color: #7F7F7F;

        }

        table {
            position: absolute;
            left: 200px;
        }

        tr:nth-child(even) {
            background-color: moccasin;
        }

        th {
            border: 1px solid #83A697;
            padding: 10px;
            background-color: mediumturquoise;
            color: #7F7F7F;
            height: 50px;
            font-size: 20px;
        }

        h1 {
            text-align: center;
            color: #7F7F7F;
        }
    </style>
</head>
<body>
<h1> Users </h1>
<table>
    <tr>
        <td>ID</td>
        <td>FIRST NAME</td>
        <td>LAST NAME</td>

    </tr>
    #foreach($user in $users)
        <tr>
            <td>$user.id</td>
            <td>$user.first_name</td>
            <td>$user.last_name</td>
        </tr>
    #end
</table>
</body>
</html>