<body>
<h1> Users<a href="usersForm" class="add">Add new user</a>
</h1>
<table>
    <tr>
        <td>ID</td>
        <td>FIRST NAME</td>
        <td>LAST NAME</td>

    </tr>
    #foreach($user in $users)
        <tr>
            <td>$user.id</td>
            <td>$user.first_name</td>
