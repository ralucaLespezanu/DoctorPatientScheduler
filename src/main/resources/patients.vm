<html>
<head>
    <title>Patients</title>
    <style>
        table, tr, td {
            border: 1px solid #83A697;
            padding: 10px;
            width: 75%;
            text-align: center;
            color: #7F7F7F;

        }

        table {
            position: absolute;
            left: 200px;
            top: 75px;
        }

        tr:nth-child(even) {
            background-color: mintcream;
        }

        th {
            border: 1px solid #83A697;
            padding: 10px;
            background-color: moccasin;
            color: #7F7F7F;
            height: 50px;
            font-size: 20px;
        }

        h1 {
            position: fixed;
            left: 200px;
            color: #7F7F7F;
        }
        .add {
            pozition: fixed;
            background-color: cornsilk;
            border: none;
            color:#7F7F7F;
            padding: 10px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-left: 855px;

        }
    </style>
</head>
<body>
<h1> Patients<a href="patientsForm" class="add">Add new patient</a>
</h1>
<table>
    <tr>
        <td>ID</td>
        <td>FIRST_NAME</td>
        <td>LAST_NAME</td>
        <td>PHONE_NUMBER</td>
        <td>EMAIL</td>
        <td>BIRTH_DATE</td>
    </tr>
    #foreach($patient in $patients)
        <tr>
            <td>$patient.id</td>
            <td>$patient.first_name</td>
            <td>$patient.last_name</td>
            <td>$patient.phone_number</td>
            <td>$patient.email</td>
            <td>$patient.birth_date</td>
        </tr>
    #end
</table>
</body>
</html>